extends ../../node_modules/jade-bootstrap/_bootstrap
block body
    .container
        .row
            .col-md-6.col-md-offset-3

                if (message.length > 0)
                    div.alert.alert-danger.alert-dismissible
                        button.close(type='button', data-dismiss='alert', aria-label='close')
                            span(aria-hidden=true) &times;
                        p #{message}

                form.form-signin(method='post')
                    h2 Please sign in
                    .form-group
                        label.sr-only(for='name') Name
                        input.form-control(type='text', placeholder='Your Name', required='', autofocus='', name='name')
                    .form-group
                        label.sr-only(for='email') Email address
                        input.form-control(type='email', placeholder='Email address', required='', name='email')
                    .form-group
                        label.sr-only(for='password') Password
                        input.form-control(type='password', placeholder='Password', required='', name='password')
                    button.btn.btn-lg.btn-success.btn-block(type='submit') Sign in
          